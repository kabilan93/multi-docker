{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "kabilan93/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "kabilan93/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "kabilan93/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "kabilan93/multi-worker",
            "essential": true,
            "portMappings":[
                {
                    "hostport": 80,
                    "container": 80
                }
            ],
            "links": [ "client", "server" ],
            "memory": 128
        }
    ]
}